---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/common/Button.astro";
---

<BaseLayout title="About Us" description="Learn about Baker Built Construction">
  <div class="container mx-auto p-4 bg-background text-foreground">
    <h1 class="text-4xl font-bold mb-4">Tailwind Theme Demo</h1>

    <button
      onclick="toggleDarkMode()"
      class="bg-primary text-primary-foreground px-4 py-2 rounded-lg mb-4"
    >
      Toggle Dark Mode
    </button>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-card text-card-foreground p-4 rounded-lg shadow">
        <h2 class="text-2xl font-semibold mb-2">Card Component</h2>
        <p class="text-muted-foreground">
          This is a card component using our theme.
        </p>
      </div>

      <div class="bg-popover text-popover-foreground p-4 rounded-lg shadow">
        <h2 class="text-2xl font-semibold mb-2">Popover Component</h2>
        <p class="text-muted-foreground">
          This simulates a popover using our theme.
        </p>
      </div>

      <div class="bg-accent text-accent-foreground p-4 rounded-lg shadow">
        <h2 class="text-2xl font-semibold mb-2">Accent Component</h2>
        <p>This uses our accent colors.</p>
      </div>

      <div
        class="bg-destructive text-destructive-foreground p-4 rounded-lg shadow"
      >
        <h2 class="text-2xl font-semibold mb-2">Destructive Component</h2>
        <p>This uses our destructive colors for warnings or errors.</p>
      </div>
    </div>

    <div class="mt-8">
      <h2 class="text-2xl font-semibold mb-4">Button Variants</h2>
      <div class="space-x-2">
        <button class="bg-primary text-primary-foreground px-4 py-2 rounded-lg"
          >Primary</button
        >
        <button
          class="bg-secondary text-secondary-foreground px-4 py-2 rounded-lg"
          >Secondary</button
        >
        <button class="bg-accent text-accent-foreground px-4 py-2 rounded-lg"
          >Accent</button
        >
        <button
          class="bg-destructive text-destructive-foreground px-4 py-2 rounded-lg"
          >Destructive</button
        >
      </div>
    </div>
    <div class="mt-8">
      <Button variant="primary">Primary Button</Button>
      <Button variant="secondary">Secondary Button</Button>
      <Button variant="destructive">Destructive Button</Button>
      <Button variant="outline">Outline Button</Button>

      <Button size="sm">Small Button</Button>
      <Button size="default">Default Button</Button>
      <Button size="lg">Large Button</Button>
    </div>
  </div>
</BaseLayout>
